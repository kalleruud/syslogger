# Syslogger Backend Configuration

# Node environment (development, production)
NODE_ENV = "development"

# HTTP server port for web UI and API
SYSLOGGER_PORT = 3791

# UDP port for receiving syslog messages
SYSLOGGER_SYSLOG_PORT = 5140
SYSLOGGER_SYSLOG_PROTOCOL = "udp"

# Database connection URL (using SQLite for simplicity)
SYSLOGGER_DB_URL = "./data/syslogger.db"

# CORS origin for API access (e.g., "*" for all origins or "http://localhost:3791" for specific origin)
SYSLOGGER_CORS_ORIGIN = "http://localhost:3000"

# Timezone for displaying timestamps (e.g., "UTC", "America/New_York", "Europe/Oslo")
TZ = "UTC"
