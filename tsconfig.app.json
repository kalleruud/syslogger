{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2023",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "composite": true,
    "noEmit": true,

    "paths": {
      "@/*": ["./frontend/*"],
      "@frontend/*": ["./frontend/*"]
    }
  },
  "include": ["frontend"]
}
