{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.backend.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "types": ["bun-types"],
    "composite": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@backend/*": ["./backend/*"],
      "@database/*": ["./backend/database/*"]
    }
  },
  "include": ["backend", "public"]
}
